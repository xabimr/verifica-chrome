{
  "manifest_version": 3,
  "name": "Verificador Multi-IA",
  "version": "0.4",
  "description": "Verifica información seleccionada con múltiples IAs: Grok, ChatGPT, Claude, Mistral, DeepSeek y Gemini",
  "permissions": [
    "contextMenus",
    "activeTab",
    "clipboardWrite",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chat.deepseek.com/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}